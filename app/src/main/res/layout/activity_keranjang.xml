<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Pembelian"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="70dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt3"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/ulos2" />
            <TextView
                android:id="@+id/txt1"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_horizontal"
                android:text="Ulos"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tx1"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="end|center_horizontal"
                android:text="Rp 290.000"
                android:textColor="@color/red_danger"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/tx2"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="end|center_horizontal"
                android:text="Size L / 2 Unit"
                android:textColor="@color/black2"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="70dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cart_delete"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="30dp"
                    android:text="Hapus"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_red_button"/>
                <EditText
                    android:id="@+id/cart_jumlah"
                    android:layout_width="78dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/cart_delete"
                    android:layout_gravity="end|center_horizontal"
                    android:layout_marginTop="85dp"
                    android:padding="8dp"
                    android:inputType="number"/>


            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tx"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Ulos"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tx4"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Rp 290.000"
                android:textColor="@color/red_danger"
                android:layout_below="@+id/txt1"
                android:layout_marginTop="40dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tx5"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:text="Size L / 2 Unit"
                    android:textColor="@color/black2"
                    android:layout_below="@+id/txt1"
                    android:layout_marginTop="70dp"/>
                <ViewAnimator
                    android:id="@+id/view_animator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:animateFirstView="true">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_keranjang"
                        android:layout_width="match_parent"
                        android:layout_height="453dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/white" />

                </ViewAnimator>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="272dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/tx2"
                        android:layout_gravity="end|center_horizontal"
                        android:layout_marginTop="85dp"
                        android:text="2"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                </FrameLayout>
            </FrameLayout>


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Biaya Pengiriman"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text=":"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text="Rp 48.000"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Total Pesanan"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text=":"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text="Rp 500.000"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Total Pembayaran"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text=":"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_horizontal"
                android:text="Rp 500.000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </FrameLayout>

        <Button
            android:id="@+id/b1"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:text="PESAN ->"
            android:textColor="@color/white"
            android:background="@drawable/rounded_blue_secondary"/>
    </LinearLayout>


</RelativeLayout>