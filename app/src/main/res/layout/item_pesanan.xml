<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:layout_constraintCircleRadius="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="112dp"
                        android:layout_height="wrap_content"
                        android:text="Alamat    : "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pesanan_alamat"
                        android:layout_width="247dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="Metode   : "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pesanan_metode"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="Harga      : "
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/penginapan_harga"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:text="Rp 000.000"
                        android:textColor="@color/green_primary"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linDaftar"
                    android:visibility="gone"
                    android:layout_width="134dp"
                    android:layout_height="149dp">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="124dp"
                        android:layout_height="149dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:foregroundGravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_pesanan_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_red_button"
                        android:text="Hapus"
                        android:textColor="@color/snackbar_red" />

                    <Button
                        android:id="@+id/btn_bayar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_blue_secondary"
                        android:text="Bayar"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>