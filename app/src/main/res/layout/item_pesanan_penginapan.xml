<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:layout_constraintCircleRadius="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/status_menunggu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Menunggu"
                    android:textColor="@color/blue_secondary"
                    android:textSize="40sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/status_diterima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesanan Diterima"
                    android:textColor="@color/green_primary"
                    android:textSize="40sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/status_ditolak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesanan Ditolak"
                    android:textColor="@color/red_danger"
                    android:textSize="40sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:text="Penginapan Tujuan"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/penginapan_alamat"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Penginapan"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pesanan_alamat"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:text="Lama Menginap"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_lama_menginap"
                        android:layout_width="194dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="179dp"
                        android:layout_height="wrap_content"
                        android:text="Metode  "
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pesanan_metode"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:text=".........."
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:text="Harga     "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/penginapan_harga"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:text="Rp 000.000"
                        android:textColor="@color/green_primary"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Checkin     "
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_tgl_checkin"
                        android:layout_width="195dp"
                        android:layout_height="wrap_content"
                        android:text="...."
                        android:textColor="@color/black"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linDaftar"
                    android:visibility="gone"
                    android:layout_width="134dp"
                    android:layout_height="149dp">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="124dp"
                        android:layout_height="149dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:foregroundGravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_pesanan_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_red_button"
                        android:text="Hapus"
                        android:textColor="@color/snackbar_red" />

                    <Button
                        android:id="@+id/btn_bayar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_blue_secondary"
                        android:text="Bayar"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_blue_secondary"
                        android:text="Ubah Resi"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_admin"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_tolak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_red_button"
                        android:text="Tolak"
                        android:textColor="@color/snackbar_red" />

                    <Button
                        android:id="@+id/btn_terima"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_green"
                        android:text="Terima"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>