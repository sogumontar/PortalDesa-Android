<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".data.ui.main.activity.DetailProductAcitivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-5dp"
        android:background="@color/white"
        android:layout_above="@+id/ln_btn"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/img_icon"
                android:paddingLeft="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:text=""
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_harga"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/red_danger"
                        android:text="Rp "
                        android:textSize="20sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="@color/black2"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="@color/black2"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/lama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="Lama Menginap"
                        android:textColor="@color/black2"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_jumlah"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="Tanggal Check-in"
                        android:textColor="@color/black2"
                        android:textSize="16sp" />

                    <DatePicker
                        android:id="@+id/datePicker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Metode Pembayaran"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <RadioButton
                            android:id="@+id/metode_atm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ATM Mandiri"
                            android:onClick="radio_button_click"
                            />
                        <RadioButton
                            android:id="@+id/metode_indomaret"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atm BRI"
                            android:onClick="radio_button_click"
                            />
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_metode"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/atm" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Rek : 5412 7512 3412 3456\n Atas Nama : Benyamin Simanungkalit"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atas Nama : Benyamin Simanungkalit"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/linear_metode_bri"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/mandiri" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Rek : 7712 6543 1231 7006\n Atas Nama : Ojaks Sidabukke"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Atas Nama : Benyamin Simanungkalit"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ln_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/produk_update_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/rounded_blue_secondary"
            android:text="Update"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/produk_delete_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/rounded_red_button"
            android:text="Delete"
            android:textColor="@color/snackbar_red" />
        <Button
            android:id="@+id/btn_pesan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue_secondary"
            android:text="Pesan"
            android:textColor="#ffff" />

    </LinearLayout>

</RelativeLayout>