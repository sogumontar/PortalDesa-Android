<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.ui.main.activity.DetailPenginapanActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_marginTop="-24dp"
        android:src="@drawable/penginapan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView2"
        android:text="Penginapan Toba"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <FrameLayout
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="14dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_today_black_24dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:text="Rp 500.000/ hari"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="460dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_black_24dp"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:text="Sitoluama"
            android:textColor="#000000"
            android:textSize="15sp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/f2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/f1"
        android:padding="5dp">

        <ImageView
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_hotel_black_24dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_horizontal"
            android:text="Rp 5/20 kamar"
            android:textSize="15sp"
            android:textColor="#000000"/>

    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f2"
        android:layout_marginTop="10dp"
        android:text="@string/des"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/psn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_btn"
        android:gravity="center"
        android:text="Pesan"/>
</RelativeLayout>